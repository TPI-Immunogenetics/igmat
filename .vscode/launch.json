    "version": "0.2.0",
    "configurations": [
        {
            "name": "PyTest",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            // "python": "${command:python.interpreterPath}",
            "module": "pytest",
            "args": [
                "-v",
                "-s"
            ],
            "cwd": "${workspaceRoot}",
            "env": {
            },
            "debugOptions": [
                "WaitOnAbnormalExit",
                // "WaitOnNormalExit",
                "RedirectOutput"
            ]
        },
    ]
}